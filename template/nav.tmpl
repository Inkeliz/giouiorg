{{ define "nav" }}
{{- $url := .URL -}}
<aside id="sidebar" class="layout-sidebar">
	<header class="logo">
		<a href="/">
			<img class="icon" src="/files/logo-text.svg" alt="Gio logo">
		</a>
	</header>

	<nav id="menu">
		<ul>
			<li><a href="/" {{if .Nav.Active}}aria-describedby="current"{{end}}>Home</a></li>
			{{ range $item := .Nav.Children }}
			<li><a href="{{$item.Page.URL}}" {{if .Active}}aria-describedby="current"{{end}}>{{$item.Page.Title}}</a></li>
			{{ end }}
		</ul>
	</nav>
</aside>
{{ end }}